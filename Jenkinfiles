pipeline {
    agent any

    tools {
        maven 'Maven 3'  // Use the configured Maven tool
    }

    stages {
        stage('Git Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/BharathKumarS23121995/irctcweb.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }
    }
}
